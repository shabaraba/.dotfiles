# character-code
deutf8 on
defencoding utf8
encoding utf8 utf8

# Disable undesired message
startup_message off
vbell off

# Default shell
shell zsh

escape ^Tw

# Change preference collor
defbce on
term xterm-256color

# Delete buffer for vim and less
altscreen on

# Status line
hardstatus alwayslastline "%{= cd} %-w%{= wk} %n %t* %{-}%+w %= LoadAVG [%l] "

# Num of scroll line
defscrollback 10000

# Enable mouse scroll
termcapinfo xterm* ti@:te@f

# offにするとスタートアップ画面を表示させなくする。
startup_message off

# onにしておくとscreenがいきなりお亡くなりになられても、その時のプロセスは生きて残る
autodetach on


